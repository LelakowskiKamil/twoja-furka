<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet author="kamil-lelakowski" id="1.0-init-table">
        <createTable tableName="offer">
            <column autoIncrement="true" name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="offer_pkey"/>
            </column>
            <column name="body_style" type="INTEGER"/>
            <column name="color" type="INTEGER"/>
            <column name="description" type="VARCHAR(255)"/>
            <column name="doors" type="INTEGER"/>
            <column name="engine_power" type="INTEGER"/>
            <column name="engine_size" type="numeric(19, 2)"/>
            <column name="fuel_type" type="VARCHAR(255)"/>
            <column name="image_url" type="VARCHAR(255)"/>
            <column name="mileage" type="INTEGER"/>
            <column name="price" type="INTEGER"/>
            <column name="title" type="VARCHAR(255)"/>
            <column name="year" type="INTEGER"/>
            <column name="model_id" type="INTEGER"/>
            <column name="user_id" type="INTEGER"/>
        </createTable>

        <createTable tableName="user_detail">
            <column autoIncrement="true" name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="user_detail_pkey"/>
            </column>
            <column name="email" type="VARCHAR(255)"/>
            <column name="enabled" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="firstname" type="VARCHAR(255)"/>
            <column name="lastname" type="VARCHAR(255)"/>
            <column name="password" type="VARCHAR(255)"/>
            <column name="phone" type="VARCHAR(255)"/>
            <column name="username" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="users_roles">
            <column name="user_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="car_manufacturer">
            <column autoIncrement="true" name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="car_manufacturer_pkey"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="car_model">
            <column autoIncrement="true" name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="car_model_pkey"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="manufacturer_id" type="INTEGER"/>
        </createTable>

        <createTable tableName="role">
            <column autoIncrement="true" name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="role_pkey"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="offer" constraintName="fk7br1d88ej6b4a5drciq9qmv2y" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="user_detail" validate="true"/>
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="users_roles" constraintName="fkkp4uei4qftwt63vjtmbjl950k" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="user_detail" validate="true"/>
        <addForeignKeyConstraint baseColumnNames="manufacturer_id" baseTableName="car_model" constraintName="fkho9vmev5g1m00pc4dd6cidlbq" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="car_manufacturer" validate="true"/>
        <addForeignKeyConstraint baseColumnNames="role_id" baseTableName="users_roles" constraintName="fkt4v0rrweyk393bdgt107vdx0x" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="role" validate="true"/>

    </changeSet>

</databaseChangeLog>